<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_cancion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/music_azul"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txt_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancion"
        android:layout_toRightOf="@id/img_cancion"/>
    <TextView
        android:id="@+id/txt_artista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artista"
        android:layout_toRightOf="@id/img_cancion"
        android:layout_below="@id/txt_cancion"/>

</RelativeLayout>